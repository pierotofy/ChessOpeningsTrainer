<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/felt"
    tools:context=".ui.explore.ExploreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="96dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <com.masseranolabs.chessopeningstrainer.WebViewContainer
            android:id="@+id/webView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp">

        </com.masseranolabs.chessopeningstrainer.WebViewContainer>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-48dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnExploreRewind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_fast_rewind_24"
                android:text="@string/rewind"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnExploreBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
                android:text="@string/back" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>